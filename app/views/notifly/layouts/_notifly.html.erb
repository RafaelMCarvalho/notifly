<div id="notifly" class="dropdown keep_open" data-user-id="<%= current_user.id %>">

  <a id="notifly-trigger" href="#" class="dropdown-toggle" data-toggle="dropdown">
    <span id="notifly-counter"></span>
    <span id="notifly-icon"><%= notifly_icon %></span>
  </a>

  <div id="notifly-notifications-panel" class="dropdown-menu">
    <div id="notifly-notifications-header">
      <%=t('notifly.view.header')%>

      <span id="notifly-header-actions" class="pull-right">
        <%= link_to t('notifly.view.mark_as_read'), '#', id: 'notifly-mark-as-read-link' %>
      </span>
    </div>

    <div id="notifly-notifications-content">
       <div class="notifly-loading"><%= t('notifly.view.loading') %></div>
    </div>

    <div id="notifly-notifications-footer">
      <%= link_to t('notifly.view.more'), '#', id: 'notifly-more-notifications-link' %>
    </div>
  </div>
</div>